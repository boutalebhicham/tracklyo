
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can read/write their own profile.
      // A PATRON can read the profile of a RESPONSABLE they manage.
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
         resource.data.managerId == request.auth.uid)
      );

      // A user can update their own profile.
      // A PATRON can create a RESPONSABLE profile (and assign managerId).
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        (request.method == 'create' && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
         request.resource.data.managerId == request.auth.uid)
      );

      // Subcollections
      match /{subcollection}/{docId} {
        // A user can read/write to their OWN subcollections.
        // A PATRON can read from their managed RESPONSABLE's subcollections.
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
           get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid)
        );
        
        // Only the user themselves can write to their subcollections.
        // This includes comments, transactions, etc.
        allow write: if request.auth != null && request.auth.uid == userId;

         match /comments/{commentId} {
            // A user can read/write comments if they have read access to the parent recap's user document.
             allow read, write: if request.auth != null && (
              // The user is the owner of the data
              userId == request.auth.uid ||
              // The user is the manager of the data owner
              (exists(/databases/$(database)/documents/users/$(userId)) && 
               get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid)
            );
        }
      }
    }
  }
}
