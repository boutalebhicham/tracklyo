
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can read/write their own profile.
      // A PATRON can read the profile of a RESPONSABLE they manage.
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
         resource.data.managerId == request.auth.uid)
      );

      // A user can update their own profile. A patron can create a RESPONSABLE user.
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null &&
                      request.resource.data.role == 'RESPONSABLE' &&
                      request.resource.data.managerId == request.auth.uid &&
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON';


      // Generic rule for all user subcollections
      match /{subcollection}/{docId} {

        // READ (get, list) rule for all subcollections
        // A user can read their own subcollection data.
        // A PATRON can read the subcollection data of a user they manage.
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          (
            exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
            exists(/databases/$(database)/documents/users/$(userId)) &&
            get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid
          )
        );
        
        // WRITE (create, update, delete) rule for most subcollections.
        // Only the user themselves can write to their subcollections.
        allow write: if request.auth != null && request.auth.uid == userId;

        // Specific rules for comments sub-subcollection
        match /comments/{commentId} {
            // A PATRON can write a comment on a recap of a user they manage.
            // A user can write a comment on their own recap.
             allow write: if request.auth != null && (
               (
                  exists(/databases/$(database)/documents/users/$(userId)) &&
                  get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid &&
                  exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON'
               ) || 
                request.auth.uid == userId
             );
        }
      }
    }
  }
}
