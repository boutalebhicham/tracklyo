
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/recaps/{recapId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/recaps/{recapId}/comments/{commentId} {
      // Allow any authenticated user to comment for now
      allow read, write: if request.auth != null;
    }

    match /users/{userId}/events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/documents/{documentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/todos/{todoId} {
      // This rule allows a user to read and write to their OWN todos subcollection.
      // This covers get, list, create, update, delete.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
