rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les todos de chaque utilisateur
    match /users/{userId}/todos/{todoId} {
      // L'utilisateur peut lire et écrire uniquement ses propres todos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les documents utilisateurs (si besoin)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
