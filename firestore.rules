
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.id == userId;

      // Users can list their own projects
      match /projects/{projectId} {
        allow read, write: if isOwner(userId);

        // All project-specific data is nested under the project.
        // Access is granted if the user owns the parent project.
        match /recaps/{recapId} {
          allow read, write: if isOwner(userId);
          
          match /comments/{commentId} {
            allow read, write: if isOwner(userId);
          }
        }
        
        match /events/{eventId} {
          allow read, write: if isOwner(userId);
        }
        
        match /documents/{documentId} {
          allow read, write: if isOwner(userId);
        }
        
        match /transactions/{transactionId} {
          allow read, write: if isOwner(userId);
        }
      }
    }
    
    // This rule allows any signed-in user to list all users.
    // This is useful for features like collaborator selection.
    match /users/{userId} {
        allow list: if isSignedIn();
    }
  }
}
