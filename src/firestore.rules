rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(collaboratorId)).data.managerId == request.auth.uid;
    }

    function isPatron() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON';
    }

    match /users/{userId} {
      // Un utilisateur peut lire et écrire son propre profil.
      // Un manager (PATRON) peut lire le profil de ses collaborateurs.
      allow read: if isOwner(userId) || isManagerOf(userId);
      allow write: if isOwner(userId);

      // Un utilisateur peut lire/écrire dans ses propres sous-collections.
      // Un manager (PATRON) peut également lire les sous-collections de ses collaborateurs.
      match /{subcollection}/{docId} {
        allow read: if isOwner(userId) || isManagerOf(userId);
        allow write: if isOwner(userId);
      }
    }
  }
}
