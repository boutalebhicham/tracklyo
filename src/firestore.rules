
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      let userDoc = get(/databases/$(database)/documents/users/$(collaboratorId));
      return request.auth != null && userDoc.data.managerId == request.auth.uid;
    }

    match /users/{userId} {
      // A user can read/write their own profile.
      // A manager (PATRON) can read the profile of their collaborators.
      allow read, write: if isOwner(userId) || isManagerOf(userId);

      // A user can read/write their own subcollections.
      // A manager (PATRON) can also read/write the subcollections of their collaborators.
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId) || isManagerOf(userId);
      }
    }
  }
}
