rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      // Only check if collaborator document exists before reading it
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(collaboratorId)) &&
             get(/databases/$(database)/documents/users/$(collaboratorId)).data.managerId == request.auth.uid;
    }

    match /users/{userId} {
      // TEMPORARY: Allow reading any user document for debugging
      // TODO: Restrict to isOwner(userId) || isManagerOf(userId) after fixing the issue
      allow read: if request.auth != null;

      // Allow updating/deleting own user document
      allow update, delete: if isOwner(userId);

      // Allow creating new users (for signup flow and Admin SDK in API)
      allow create: if request.auth != null;

      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId) || isManagerOf(userId);
      }
    }
  }
}
