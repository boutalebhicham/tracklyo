rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      let userDoc = get(/databases/$(database)/documents/users/$(collaboratorId));
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
             userDoc.data.managerId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isManagerOf(userId);

      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId) || isManagerOf(userId);
      }
    }
  }
}
