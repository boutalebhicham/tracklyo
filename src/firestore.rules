
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      let userDoc = get(/databases/$(database)/documents/users/$(collaboratorId));
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
             userDoc.data.managerId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isManagerOf(userId);

      // Règle spécifique et permissive pour les todos
      match /todos/{todoId} {
        allow read, write: if request.auth != null;
      }
      
      match /{subcollection}/{docId} {
        // Cette règle s'appliquera aux autres sous-collections (recaps, transactions, etc.)
        // mais pas aux todos car la règle plus spécifique ci-dessus prend le dessus.
        allow read, write: if isOwner(userId) || isManagerOf(userId);

        match /{nestedSubcollection}/{nestedDocId} {
          allow read, write: if isOwner(userId) || isManagerOf(userId);
        }
      }
    }
  }
}
