rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Generic rule for subcollections
      match /{subcollection}/{docId} {
        // A user can read/write their own subcollections.
        // A manager (PATRON) can read subcollections of their collaborators.
        allow read, write: if request.auth != null && 
                            (request.auth.uid == userId || 
                             (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
                              get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid));
      }
      
      match /recaps/{recapId}/comments/{commentId} {
        allow read, write: if request.auth != null;
      }

      match /todos/{todoId} {
        // A user can read their own todos. A manager can read their collaborators' todos.
        allow read: if request.auth != null && 
                    (request.auth.uid == userId || 
                     (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
                      get(/databases/$(database)/documents/users/$(userId)).data.managerId == request.auth.uid));
        
        // A user can update the status of their own todos.
        allow update: if request.auth != null && request.auth.uid == userId &&
                      request.resource.data.keys().hasAll(['status', 'completedAt']) &&
                      request.resource.data.size() == 2;
                      
        // A manager can create todos for their collaborators.
        allow create: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
                       request.resource.data.assignedTo == userId;
                       
        // A manager can delete todos.
        allow delete: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON';
      }
    }
  }
}

    