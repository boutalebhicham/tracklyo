rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isManagerOf(collaboratorId) {
      let userDoc = get(/databases/$(database)/documents/users/$(collaboratorId));
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON' &&
             userDoc.data.managerId == request.auth.uid;
    }

    match /users/{userId} {
      // Allow reading own user document or if user is a manager of this user
      allow get: if isOwner(userId) || isManagerOf(userId);

      // Allow PATRON to query/list users (they can only see their collaborators via where clause)
      allow list: if request.auth != null &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'PATRON';

      // Allow updating/deleting own user document
      allow update, delete: if isOwner(userId);

      // Allow creating new users (handled by Admin SDK in API)
      allow create: if request.auth != null;

      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId) || isManagerOf(userId);
      }
    }
  }
}
